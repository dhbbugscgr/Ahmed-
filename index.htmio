<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>أحمد اليماني - فحص الروابط الملغمة</title>
  <!-- Font Awesome for icons (سيبراني/تقني) -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <!-- Google Fonts: خط عصري يجمع بين الفخامة والوضوح -->
  <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;800&family=Orbitron:wght@400;700;900&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background-color: #0b0c10;
      font-family: 'Cairo', sans-serif;
      color: #e0e0e0;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      position: relative;
      overflow-x: hidden;
    }

    /* خلفية سيبرانية متحركة (شبكة رقمية) */
    body::before {
      content: "";
      position: fixed;
      top: 0; left: 0; width: 100%; height: 100%;
      background-image: 
        linear-gradient(rgba(0, 255, 255, 0.02) 1px, transparent 1px),
        linear-gradient(90deg, rgba(0, 255, 255, 0.02) 1px, transparent 1px);
      background-size: 40px 40px;
      pointer-events: none;
      z-index: 0;
    }

    /* طبقة ضوء نيون خافت */
    body::after {
      content: "";
      position: fixed;
      top: -50%; left: -50%;
      width: 200%; height: 200%;
      background: radial-gradient(circle at 70% 30%, rgba(0, 255, 255, 0.1) 0%, transparent 50%);
      animation: rotateSlow 30s infinite linear;
      z-index: 0;
    }

    @keyframes rotateSlow {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    .container {
      position: relative;
      z-index: 10;
      max-width: 1300px;
      margin: 0 auto;
      padding: 20px;
      flex: 1;
      display: flex;
      flex-direction: column;
    }

    /* ========== الشريط العلوي ========== */
    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px 0;
      border-bottom: 1px solid rgba(0, 255, 255, 0.2);
      margin-bottom: 40px;
      flex-wrap: wrap;
    }

    .logo {
      display: flex;
      align-items: center;
      gap: 15px;
    }

    .logo-icon {
      font-size: 2.5rem;
      color: #00ffff;
      text-shadow: 0 0 15px #00ffff, 0 0 30px #00ffff;
      animation: pulse 2s infinite;
    }

    @keyframes pulse {
      0% { opacity: 0.9; text-shadow: 0 0 10px #00ffff; }
      50% { opacity: 1; text-shadow: 0 0 25px #00ffff, 0 0 45px #00ccff; }
      100% { opacity: 0.9; text-shadow: 0 0 10px #00ffff; }
    }

    .logo-text h1 {
      font-family: 'Orbitron', sans-serif;
      font-size: 2rem;
      font-weight: 900;
      background: linear-gradient(135deg, #ffffff 0%, #00ffff 80%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      letter-spacing: 2px;
    }

    .logo-text span {
      font-size: 0.9rem;
      color: #a0a0a0;
      display: block;
      line-height: 1.2;
      border-right: 2px solid #00ffff;
      padding-right: 10px;
    }

    .telegram-badge {
      background: rgba(0, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border: 1px solid #00ffff;
      border-radius: 50px;
      padding: 12px 25px;
      display: flex;
      align-items: center;
      gap: 12px;
      font-size: 1.2rem;
      font-weight: 600;
      box-shadow: 0 0 20px rgba(0, 255, 255, 0.3);
      transition: 0.3s;
    }

    .telegram-badge i {
      color: #00ffff;
      font-size: 1.8rem;
    }

    .telegram-badge a {
      color: #ffffff;
      text-decoration: none;
      direction: ltr;
      display: inline-block;
      background: rgba(0, 0, 0, 0.4);
      padding: 5px 15px;
      border-radius: 40px;
      border: 1px solid rgba(255,255,255,0.2);
      transition: 0.2s;
    }

    .telegram-badge a:hover {
      background: #00ffff;
      color: #000;
      border-color: #00ffff;
      box-shadow: 0 0 25px #00ffff;
    }

    /* ========== القسم الرئيسي ========== */
    .hero {
      text-align: center;
      margin: 30px 0 50px;
    }

    .hero h2 {
      font-size: 3rem;
      font-weight: 800;
      line-height: 1.3;
      background: linear-gradient(to left, #fff, #a0f0ff);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .hero h2 i {
      color: #00ffff;
      margin-left: 10px;
      -webkit-text-fill-color: initial;
      background: none;
    }

    .hero p {
      font-size: 1.3rem;
      color: #ccc;
      max-width: 700px;
      margin: 20px auto 0;
      background: rgba(0, 255, 255, 0.05);
      padding: 15px 30px;
      border-radius: 60px;
      backdrop-filter: blur(8px);
      border: 1px solid rgba(0,255,255,0.2);
      display: inline-block;
    }

    /* ========== صندوق الفحص ========== */
    .scan-card {
      background: rgba(10, 20, 30, 0.7);
      backdrop-filter: blur(15px);
      border: 1px solid rgba(0, 255, 255, 0.25);
      border-radius: 40px;
      padding: 50px 40px;
      margin: 20px 0 50px;
      box-shadow: 0 20px 40px rgba(0,0,0,0.8), 0 0 40px rgba(0, 255, 255, 0.3);
      transition: 0.4s;
    }

    .scan-card:hover {
      box-shadow: 0 20px 60px rgba(0, 255, 255, 0.4);
      border-color: rgba(0, 255, 255, 0.6);
    }

    .input-group {
      display: flex;
      gap: 15px;
      flex-wrap: wrap;
      justify-content: center;
    }

    .url-input-wrapper {
      flex: 1;
      min-width: 300px;
      position: relative;
    }

    .url-input-wrapper i {
      position: absolute;
      right: 20px;
      top: 50%;
      transform: translateY(-50%);
      color: #00ffff;
      font-size: 1.5rem;
      text-shadow: 0 0 8px #00ffff;
    }

    #urlInput {
      width: 100%;
      padding: 20px 60px 20px 25px;
      background: rgba(0, 0, 0, 0.7);
      border: 2px solid #00ffff;
      border-radius: 70px;
      font-family: 'Cairo', sans-serif;
      font-size: 1.2rem;
      color: #ffffff;
      outline: none;
      transition: 0.3s;
      box-shadow: 0 0 15px rgba(0, 255, 255, 0.3);
    }

    #urlInput:focus {
      box-shadow: 0 0 30px #00ffff;
      border-color: #ffffff;
    }

    #urlInput::placeholder {
      color: rgba(255,255,255,0.5);
      font-size: 1rem;
    }

    .scan-btn {
      background: linear-gradient(145deg, #001a1a, #000e0e);
      border: 2px solid #00ffff;
      color: #00ffff;
      font-size: 1.5rem;
      font-weight: 800;
      padding: 18px 45px;
      border-radius: 70px;
      cursor: pointer;
      display: flex;
      align-items: center;
      gap: 12px;
      transition: 0.25s;
      box-shadow: 0 0 25px rgba(0,255,255,0.3);
      font-family: 'Orbitron', sans-serif;
      letter-spacing: 1px;
    }

    .scan-btn i {
      font-size: 1.8rem;
    }

    .scan-btn:hover {
      background: #00ffff;
      color: #000;
      box-shadow: 0 0 50px #00ffff;
      border-color: #fff;
    }

    /* ========== نتيجة الفحص ========== */
    .result-area {
      margin-top: 45px;
      padding: 20px;
      border-radius: 50px;
      background: rgba(0, 0, 0, 0.5);
      border: 1px dashed rgba(0,255,255,0.4);
      min-height: 120px;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: 0.3s;
    }

    .result-content {
      display: flex;
      align-items: center;
      gap: 30px;
      flex-wrap: wrap;
      justify-content: center;
    }

    .result-icon {
      font-size: 4rem;
    }

    .result-text {
      font-size: 2rem;
      font-weight: 700;
    }

    .result-desc {
      font-size: 1.2rem;
      color: #aaa;
    }

    .loading {
      display: flex;
      align-items: center;
      gap: 20px;
      color: #00ffff;
    }

    .loading i {
      font-size: 3rem;
      animation: spin 1.5s infinite linear;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    /* ألوان النتائج */
    .safe {
      color: #00ffaa;
      text-shadow: 0 0 15px #00ffaa;
    }
    .malicious {
      color: #ff0055;
      text-shadow: 0 0 15px #ff0055;
    }
    .warning {
      color: #ffaa00;
      text-shadow: 0 0 15px #ffaa00;
    }

    /* ========== قسم التواصل ========== */
    .contact-section {
      margin-top: 60px;
      padding: 30px;
      background: rgba(0, 20, 20, 0.6);
      backdrop-filter: blur(10px);
      border-radius: 80px;
      border: 1px solid #00ffff;
      display: flex;
      align-items: center;
      justify-content: space-between;
      flex-wrap: wrap;
      gap: 25px;
    }

    .contact-info {
      display: flex;
      align-items: center;
      gap: 20px;
    }

    .contact-info i {
      font-size: 3rem;
      color: #00ffff;
      filter: drop-shadow(0 0 15px #00ffff);
    }

    .contact-info span {
      font-size: 1.8rem;
      font-weight: 600;
      direction: ltr;
      background: #0a0a0a;
      padding: 10px 30px;
      border-radius: 60px;
      border: 1px solid #00ffff;
      font-family: monospace;
    }

    .copy-btn {
      background: transparent;
      border: 2px solid #00ffff;
      color: #00ffff;
      padding: 15px 35px;
      border-radius: 60px;
      font-size: 1.2rem;
      font-weight: 700;
      display: flex;
      align-items: center;
      gap: 12px;
      cursor: pointer;
      transition: 0.2s;
    }

    .copy-btn:hover {
      background: #00ffff;
      color: #000;
      box-shadow: 0 0 30px #00ffff;
    }

    .footer {
      text-align: center;
      margin-top: 50px;
      padding: 20px;
      border-top: 1px solid rgba(0,255,255,0.1);
      color: #6f8f8f;
    }

    /* تجاوب */
    @media (max-width: 700px) {
      .navbar { flex-direction: column; gap: 20px; }
      .hero h2 { font-size: 2rem; }
      .scan-btn { width: 100%; justify-content: center; }
      .contact-section { flex-direction: column; text-align: center; }
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- شريط التنقل باسم أحمد اليماني -->
    <nav class="navbar">
      <div class="logo">
        <div class="logo-icon">
          <i class="fas fa-shield-halved"></i>
        </div>
        <div class="logo-text">
          <h1>أحمد اليماني</h1>
          <span>Al-Yamani Cyber Security</span>
        </div>
      </div>
      <div class="telegram-badge">
        <i class="fab fa-telegram-plane"></i>
        <span>للتواصل المباشر:</span>
        <a href="https://t.me/XK_X_A" target="_blank">@XK_X_A</a>
      </div>
    </nav>

    <!-- القسم الرئيسي -->
    <section class="hero">
      <h2>
        <i class="fas fa-skull"></i> فحص الروابط الملغمة <i class="fas fa-bolt"></i>
      </h2>
      <p>كشف الروابط الضارة والمشبوهة بتقنيات سيبرانية متطورة</p>
    </section>

    <!-- صندوق الفحص -->
    <div class="scan-card">
      <div class="input-group">
        <div class="url-input-wrapper">
          <i class="fas fa-link"></i>
          <input type="text" id="urlInput" placeholder="https://example.com" dir="ltr">
        </div>
        <button class="scan-btn" id="scanBtn">
          <i class="fas fa-radar"></i> فحص الرابط
        </button>
      </div>

      <!-- منطقة عرض النتيجة -->
      <div class="result-area" id="resultArea">
        <div class="result-content" id="resultContent">
          <div class="result-icon"><i class="fas fa-shield"></i></div>
          <div class="result-text">انتظر لإدخال رابط</div>
        </div>
      </div>
    </div>

    <!-- قسم التواصل مع أحمد اليماني -->
    <div class="contact-section">
      <div class="contact-info">
        <i class="fab fa-telegram"></i>
        <span>@XK_X_A</span>
      </div>
      <button class="copy-btn" id="copyBtn">
        <i class="fas fa-copy"></i> نسخ معرف التليجرام
      </button>
    </div>

    <div class="footer">
      <i class="fas fa-crown" style="color: #00ffff;"></i> جميع الحقوق محفوظة لأحمد اليماني 2025 
    </div>
  </div>

  <script>
    (function() {
      // عناصر الواجهة
      const urlInput = document.getElementById('urlInput');
      const scanBtn = document.getElementById('scanBtn');
      const resultArea = document.getElementById('resultArea');
      const resultContent = document.getElementById('resultContent');
      const copyBtn = document.getElementById('copyBtn');

      // دالة لعرض نتيجة عشوائية (محاكاة فحص)
      function simulateScan(url) {
        // تحقق من أن الرابط ليس فارغاً
        if (!url.trim()) {
          showResult('empty', 'الرجاء إدخال رابط', '');
          return;
        }

        // عرض حالة التحميل
        showLoading();

        setTimeout(() => {
          // منطق عشوائي مع نزعة أمنية (60% آمن، 35% ضار، 5% مشبوه)
          const rand = Math.random();
          let status = '';
          let mainText = '';
          let icon = '';
          let desc = '';

          if (rand < 0.6) {
            status = 'safe';
            mainText = 'الرابط آمن';
            icon = 'fa-shield-halved';
            desc = 'لم يتم اكتشاف أي تهديدات.';
          } else if (rand < 0.95) {
            status = 'malicious';
            mainText = 'رابط ضار!';
            icon = 'fa-skull-crossbones';
            desc = 'هذا الرابط مُلغم ويشكل خطراً. ابتعد فوراً.';
          } else {
            status = 'warning';
            mainText = 'مشبوه';
            icon = 'fa-triangle-exclamation';
            desc = 'الرابط يحتوي على عناصر مشبوهة، يُنصح بتوخي الحذر.';
          }

          // عرض النتيجة
          resultContent.innerHTML = `
            <div class="result-icon ${status}"><i class="fas ${icon}"></i></div>
            <div style="text-align: center;">
              <div class="result-text ${status}">${mainText}</div>
              <div class="result-desc">${desc}</div>
            </div>
          `;
        }, 1800); // تأخير وهمي لفحص
      }

      function showLoading() {
        resultContent.innerHTML = `
          <div class="loading">
            <i class="fas fa-circle-notch"></i>
            <span style="font-size: 1.8rem;">جاري الفحص السيبراني...</span>
          </div>
        `;
      }

      function showResult(status, mainText, desc) {
        let icon = 'fa-shield';
        let statusClass = '';
        if (status === 'empty') {
          icon = 'fa-exclamation-circle';
          statusClass = 'warning';
          desc = 'أدخل رابطاً في الحقل أعلاه.';
        } else if (status === 'safe') {
          icon = 'fa-shield-halved';
          statusClass = 'safe';
        } else if (status === 'malicious') {
          icon = 'fa-skull-crossbones';
          statusClass = 'malicious';
        } else {
          icon = 'fa-triangle-exclamation';
          statusClass = 'warning';
        }

        resultContent.innerHTML = `
          <div class="result-icon ${statusClass}"><i class="fas ${icon}"></i></div>
          <div style="text-align: center;">
            <div class="result-text ${statusClass}">${mainText}</div>
            <div class="result-desc">${desc}</div>
          </div>
        `;
      }

      // حدث الضغط على زر الفحص
      scanBtn.addEventListener('click', () => {
        simulateScan(urlInput.value);
      });

      // الضغط على Enter في حقل الإدخال
      urlInput.addEventListener('keypress', (e) => {
        if (e.key === 'Enter') {
          simulateScan(urlInput.value);
        }
      });

      // نسخ معرف التليجرام
      copyBtn.addEventListener('click', () => {
        const telegramId = '@XK_X_A';
        navigator.clipboard.writeText(telegramId).then(() => {
          // تغيير مؤقت للنص
          const originalHTML = copyBtn.innerHTML;
          copyBtn.innerHTML = '<i class="fas fa-check"></i> تم النسخ!';
          copyBtn.style.background = '#00ffff';
          copyBtn.style.color = '#000';
          setTimeout(() => {
            copyBtn.innerHTML = originalHTML;
            copyBtn.style.background = 'transparent';
            copyBtn.style.color = '#00ffff';
          }, 1500);
        }).catch(() => {
          alert('فشل النسخ، يمكنك نسخ المعرف يدوياً: @XK_X_A');
        });
      });

      // تلميح بسيط عند بدء التشغيل
      showResult('empty', 'أدخل رابطاً للفحص', 'مثال: https://example.com');
    })();
  </script>
</body>
  </html>
